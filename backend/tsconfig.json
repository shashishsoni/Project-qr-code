{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
      // Remove "types": ["node", "express", "jsonwebtoken"] unless intentionally limiting scope
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}